<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.thirdeye.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/snapshot"
        android:id="@+id/snapshot"
        android:paddingTop="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="26dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/Lay1"
        android:layout_below="@id/snapshot"
        android:paddingBottom="16dp"
        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/snapshot"
            android:layout_centerHorizontal="true"
            android:id="@+id/newText"
            android:hint="Add Text here"
            android:layout_weight="7"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Voice"
            android:onClick="voice"
            />
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Lay1"
        android:text="search"
        android:paddingTop="20dp"
        android:onClick="search"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click"
        android:id="@+id/clicked"
        android:onClick="click"
        android:layout_below="@+id/snapshot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="136dp"
        android:paddingBottom="16dp"
        />

    <ImageView android:id="@+id/imageView1"
        android:layout_height="170dp"
        android:src="@drawable/img"
        android:layout_width="212dp"
        android:layout_below="@id/clicked"
        android:maxHeight="180dp"
        android:layout_alignLeft="@+id/snapshot"
        android:layout_alignStart="@+id/snapshot" />

</RelativeLayout>
